<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bk" />

    <LinearLayout
        android:id="@+id/ll_boss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bannerAd"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imv_more"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="20dp"
                android:src="@drawable/more" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="16dp"
                android:maxLines="1"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="72sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <ImageButton
                    android:id="@+id/ib_reset"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_n_oval_face"
                    android:gravity="center"
                    android:padding="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ac"
                    android:textColor="@android:color/black"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/ib_negavity"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_n_oval_face"
                    android:gravity="center"
                    android:padding="20dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/soam"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />

                <ImageButton
                    android:id="@+id/ib_percent"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_n_oval_face"
                    android:gravity="center"
                    android:padding="20dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/phantram"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />

                <ImageButton
                    android:id="@+id/ib_divide"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"

                    android:background="@drawable/oval_yello_tron"
                    android:gravity="center"
                    android:padding="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/divide"
                    android:textColor="@android:color/black"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <TextView
                    android:id="@+id/tv_Seven"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_Eight"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="8"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_Nine"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="9"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <ImageButton
                    android:id="@+id/ib_multiplication"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/oval_yello_tron"

                    android:gravity="center"
                    android:padding="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/multiplicationwite"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <TextView
                    android:id="@+id/tv_Four"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_Five"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_Six"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <ImageButton
                    android:id="@+id/ib_minus"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/oval_yello_tron"
                    android:gravity="center"
                    android:padding="20dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/line"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <TextView
                    android:id="@+id/tv_One"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_Tow"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_Three"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <ImageButton
                    android:id="@+id/ib_plus"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/oval_yello_tron"
                    android:gravity="center"
                    android:padding="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/add"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_zero"
                    android:layout_width="156dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_elip_chip"
                    android:paddingLeft="32dp"
                    android:paddingTop="24dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_comma"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="."
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_equal"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/oval_yello_tron"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="="
                    android:textColor="@android:color/white"
                    android:textSize="42dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bannerAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />


</RelativeLayout>
