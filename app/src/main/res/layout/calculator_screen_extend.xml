<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="23dp"
            android:clickable="true"
            android:orientation="vertical"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tv_bracket_Left"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="("
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvbracket_Rigth"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text=")"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_euler"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="e"
                    android:textColor="@android:color/white"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/tv_giaithua"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="x!"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/ib_exponential_2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/xtow"
                    android:textColor="@android:color/white" />

                <ImageButton
                    android:id="@+id/ib_exponential_3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/xthree"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/ib_eponential_n"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/xy"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/ib_euler_n"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ex"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/ib_exponential_ten"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ten"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/ib_one_exponential_negavity"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/oneondivide"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/ib_square_root"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cantow"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/ib_cube_root"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/canthree"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/ib_n_root"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cany"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_loga_euler"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="ln"
                    android:textColor="@android:color/white"
                    android:textSize="24dp" />

                <ImageButton
                    android:id="@+id/ib_loga_ten"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logten"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/ib_tow_eponentital_x"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"

                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/towx"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/ib_sin_expontital_one_negavity"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/sinone"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/ib_cos_expontital_one_negavity"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/cosone"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/ib_tan_expontital_one_negavity"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"

                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/tanone"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_sin"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="sin"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tv_cos"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="cos"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_tan"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="tan"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_rad"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Rad"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_sinh"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="sinh"
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv_cosh"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="cosh"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_tanh"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="tanh"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/ib_pi"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/numberpi"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_rand"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Rand"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/ib_choose_color"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/choose"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/ib_rate"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/rate"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />

                <ImageButton
                    android:id="@+id/ib_feeback"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/feedback"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/ib_privatie"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/backgrond_button_vovan"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/privacy"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layourtAds"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
